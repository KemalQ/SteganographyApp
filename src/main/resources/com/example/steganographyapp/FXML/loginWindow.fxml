<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.steganographyapp.LoginController">
   <children>
      <StackPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" stylesheets="@../CSS/loginPage.css">
               <children>
                  <Label fx:id="loginLabel" text="Login" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="username" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="1.0" left="20.0" right="20.0" top="30.0" />
                     </VBox.margin>
                     <styleClass>
                        <String fx:value="glass-panel" />
                        <String fx:value="modern-text-field" />
                     </styleClass>
                  </TextField>
                  <PasswordField fx:id="password" promptText="Password">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                     <styleClass>
                        <String fx:value="glass-panel" />
                        <String fx:value="modern-text-field" />
                     </styleClass>
                  </PasswordField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <CheckBox fx:id="checkBox" mnemonicParsing="false" text="Remember Me" />
                        <!--<HyperlinkLabel />-->
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="170.0" styleClass="buttonRadius" text="Log In">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="1.0" />
                     </VBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
               <styleClass>
                  <String fx:value="glass-panel" />
                  <String fx:value="modern-text-field" />
               </styleClass>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
