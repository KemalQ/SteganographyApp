<!--<?import org.controlsfx.control.HyperlinkLabel?>-->

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.steganographyapp.AuthController">
    <children>
        <ImageView cache="true" fitHeight="400.0" fitWidth="600.0" preserveRatio="false" smooth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../Images/snowy_mountains.jpeg" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="200.0" layoutY="97.0" prefHeight="200.0" prefWidth="200.0" stylesheets="@../CSS/loginPage.css">
            <children>
                <Label text="Authorzation" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font></Label>
                <TextField fx:id="username" promptText="Username">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
               <styleClass>
                  <String fx:value="glass-panel" />
                  <String fx:value="modern-text-field" />
               </styleClass></TextField>
                <PasswordField promptText="Password">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
               <styleClass>
                  <String fx:value="glass-panel" />
                  <String fx:value="modern-text-field" />
               </styleClass></PasswordField>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <CheckBox mnemonicParsing="false" text="CheckBox" />
                        <!--<HyperlinkLabel />-->
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="170.0" text="Log in">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin></Button>
            </children>
            <styleClass>
                <String fx:value="glass-panel" />
                <String fx:value="modern-text-field" />
            </styleClass>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
